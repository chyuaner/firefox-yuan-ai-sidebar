{
  "manifest_version": 2,
  "name": "Yuan AI OpenWebUI in Sidebar",
  "description": "Displays Yuan AI OpenWebUI in the sidebar.",
  "version": "2.0.1",
  "background": {
    "scripts": ["src/background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "ai-sidebar@yuaner.tw",
      "strict_min_version": "100.0",
      "data_collection_permissions": {
        "required": ["websiteContent"]
      }
    }
  },
  "options_ui": {
    "page": "src/options/options.html",
    "browser_style": true
  },
  "sidebar_action": {
    "default_icon": {
      "16": "src/icons/favicon-16.png",
      "32": "src/icons/favicon-32.png",
      "192": "src/icons/favicon-192.png"
    },
    "default_title": "Yuan AI OpenWebUI",
    "default_panel": "src/sidebar/panel.html",
    "browser_style": false
  },
  "icons": {
    "16": "src/icons/favicon-16.png",
    "32": "src/icons/favicon-32.png"
  },
  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Alt+Shift+C"
      },
      "description": "Toggle the Yuan AI OpenWebUI sidebar."
    }
  },
  "browser_action": {
    "default_icon": {
      "16": "src/icons/favicon-16.png",
      "32": "src/icons/favicon-32.png"
    }
  }
}
